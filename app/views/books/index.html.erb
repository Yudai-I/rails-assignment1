<h2 class="books">Books</h2>

<table>
  <th>Title</th>
<th>Body</th>
<% @books.each do |book| %>

<tr>
  <td class="title"><%= book.title %></td>
 
  <td class="body"><%= book.body %></td>
  
  <td class="link">
   <span><%= link_to "Show", book_path(book.id) %></span>
   <span><%= link_to "Edit", edit_book_path(book.id) %></span>
   <span><%= link_to "Destroy" , book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
  </td><br>
  </tr>
<% end %>
</table>



<div class="submit">
  <h3>New book</h3>
  
